<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="330dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardCornerRadius="20dp"
    app:cardElevation="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_dialog_thanhtoan"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/cancel"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="end"
            android:background="@color/usual"
            android:src="@android:drawable/ic_menu_close_clear_cancel" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <EditText
                android:id="@+id/edithoten"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/button"
                android:hint="Nhập họ tên"
                android:textSize="18dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <EditText
                android:id="@+id/editsdt"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/button"
                android:hint="Nhập Số điện thoại"
                android:inputType="number"
                android:textSize="18dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <EditText
                android:id="@+id/editdiachi"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/button"
                android:hint="Nhập Địa Chỉ"
                android:textSize="18dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <EditText
                android:id="@+id/editghichu"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/button"
                android:hint="Nhập ghi chú "
                android:textSize="18dp" />
        </com.google.android.material.textfield.TextInputLayout>
        <Spinner
            android:id="@+id/spinerphguongthuc"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_margin="0dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/colorRed" />

        <TextView
            android:id="@+id/txttongtien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Tổng Tiền : 2555555 đ "
            android:textColor="@android:color/holo_red_dark"
            android:textSize="25sp"
            android:textStyle="bold"
            android:fontFamily="@string/fontfm"/>

        <Button
            android:id="@+id/btnxacnhan"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:background="@drawable/button"
            android:text="Xác nhận mua"
            android:textSize="14dp"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>