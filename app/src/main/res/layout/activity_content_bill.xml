<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/ThemeOverlay.AppCompat.Dark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/usual"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtmaHD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:text="mi cay"
                android:textColor="@color/usual"
                android:textSize="18sp"
                android:textStyle="bold"/>
            <TextView

                android:id="@+id/txthoten"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:text="Nhom 08"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView

                android:id="@+id/txtdiachi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:text="HUflit"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView

                android:id="@+id/txtsdt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:text="012345678"
                android:textColor="@color/black"
                android:textSize="18sp" />
            <TextView

                android:id="@+id/txttongtien"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:text="1000000Đ"
                android:textColor="@color/usual"
                android:textSize="18sp" />
            <TextView

                android:id="@+id/txtrangthaidonhang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:text="Đang xử lý"
                android:textColor="@color/usual"
                android:textSize="20sp"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"

        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/usual" />

     <androidx.recyclerview.widget.RecyclerView
         android:layout_width="match_parent"
         android:layout_margin="10dp"
         android:layout_weight="1"
         android:id="@+id/rcvSP"
         android:layout_height="0dp"/>

    <Button
        android:id="@+id/btncapnhat"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="5dp"
        android:elevation="5dp"
        android:text="Cập Nhật Trạng Thái"
        android:background="@drawable/button"/>

</LinearLayout>